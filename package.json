{
  "name": "seo-facile-de-ouf",
  "workspaces": [
    "backend/*",
    "frontend",
    "shared"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "shadcn": "^3.5.1"
  },
  "scripts": {
    "prepare": "husky",
    "test": "echo \"Error: no test specified\" && exit 1",
    "frontend": "cd frontend && pnpm run dev",
    "api-gateway": "cd backend/api-gateway && pnpm run dev",
    "users-api": "cd backend/users-api && pnpm run dev",
    "shop-api": "cd backend/shop-api && pnpm run dev",
    "generations-api": "cd backend/generations-api && pnpm run dev",
    "dev": "concurrently \"pnpm run frontend\" \"pnpm run api-gateway\" \"pnpm run users-api\" \"pnpm run shop-api\" \"pnpm run generations-api\"",
    "lint": "pnpm -r --if-present run lint"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}

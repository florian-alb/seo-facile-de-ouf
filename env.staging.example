# Environment variables for docker-compose.staging.yml
# Copy this file to .env.staging for staging deployment

# Ports
FRONTEND_PORT=3000
API_GATEWAY_PORT=4000
USERS_API_PORT=5001
GENERATIONS_API_PORT=5002
MONGO_PORT=27017
POSTGRES_PORT=5432
MONGO_EXPRESS_PORT=8081
ADMINER_PORT=8082

# Database passwords (CHANGE IN PRODUCTION!)
POSTGRES_PASSWORD=postgres_secure_password_here

# MongoDB
MONGO_URI=mongodb://mongo:27017/generations-db

# Microservices URLs (for Docker network)
GENERATIONS_API_URL=http://generations-api:5002
USERS_API_URL=http://users-api:5001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000

